<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GShop</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            padding: 20px;
        }

        .category-card {
            margin-bottom: 20px;
        }

        .category-card .card {
            border: none;
            border-radius: 4px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            transition: box-shadow 0.3s ease;
            height: 100%;
        }

        .category-card .card:hover {
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
        }

        .category-link {
            display: flex;
            align-items: center;
            text-decoration: none;
            color: #333;
            height: 100%;
        }

        .category-link .card-body {
            padding: 15px;
        }

        .category-image {
            width: 50px;
            height: 50px;
            margin-right: 10px;
            object-fit: cover;
            border-radius: 50%;
        }
    </style>
</head>

<body>

    <div class="container">
        <div class="row mt-4">
            <div class="col-md-6">
                <a href="/gshop/user-profile/" class="btn btn-primary mb-3">Profile</a>
                <a href="/gshop/orders/" class="btn btn-primary mb-3">Orders</a>

                <form action="" class="mb-3">
                    <div class="input-group">
                        <input type="text" class="form-control" name="keyword" id="keyword" placeholder="Masukkan kata kunci">
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="row row-cols-3">
            <% categories.forEach(category => { %>
            <div class="col category-card">
                <a href="/gshop/category/<%= category.id %>" class="category-link">
                    <div class="card">
                        <div class="card-body d-flex align-items-center">
                            <img src="<%= category.image %>" alt="<%= category.name %>" class="category-image">
                            <h5 class="card-title mb-0"><%= category.name %></h5>
                        </div>
                    </div>
                </a>
            </div>
            <% }) %>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.0/js/bootstrap.bundle.min.js"></script>
</body>

</html>
